!to "loader", cbm

TARGET_ADDRESS = $4500
CHAROUT = $FFD2
DEFAULT_DRIVE = 8

*=$0801
!byte $0c,$08,$e5,$07,$9e,$20,$32,$30,$36,$32,$00,$00,$00

jmp main

DEVICE_NUM_LOADER
!byte DEFAULT_DRIVE

!macro load16BitImmediate .val, .addr {
    lda #<.val
    sta .addr
    lda #>.val
    sta .addr+1
}

!source "disk_io.a"

ALREADY_LOADED
!byte 0

FILE_NAME
!tx "MANDELBR"

main
    lda ALREADY_LOADED
    bne .startProgram
    +loadFile FILE_NAME, 8, DEVICE_NUM_LOADER, TARGET_ADDRESS
    bne .errLoad
.startProgram
    lda #1
    sta ALREADY_LOADED
    jmp TARGET_ADDRESS
.errLoad
    ldy #0
.errLoop
    lda ERROR_MSG_BUFFER,y
    jsr CHAROUT
    iny
    cpy ERR_BYTE_COUNTER
    bne .errLoop
    lda #10
    jsr CHAROUT
    lda #13
    jsr CHAROUT
    rts

